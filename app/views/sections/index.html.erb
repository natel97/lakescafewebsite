<style>
  .item-name-on-picture {
    background-color: rgba(0,0,0,.7);
    border-radius: 16px;
    transition: background-color 0.3s;
    position: absolute;
    top: 70%;
    left: 50%;
    transform: translate(-50%, -50%);
    cursor: pointer;
  }
  .item-name-on-picture h3 {
    color: rgb(130, 172, 134);
    text-shadow: -1px 0 rgb(40,81,41), 0 1px rgb(40,81,41), 1px 0 rgb(40,81,41), 0 -1px rgb(40,81,41);
    transition: color 0.3s;
    top: 70%;
  }
  .thumbnail:hover .item-name-on-picture {
    background-color: rgba(0,0,0,0);
    border-radius: 16px;
    transition: background-color 0.3s;
  }
  .setFixed {
    width: auto;
    image-height: 512px;
    margin: 20px;
  }
  body {
    background-image: none;
    background-color: rgb(0, 196, 245);
    overflow: break-line;
  }
  #hours {
    text-align: right;
    font-size: 1.5em;
  }
  .time {
    padding-left: 32px;
  }
  #hour-tag {
    text-decoration: underline;
    padding-left: 17%;
  }
  .item img {
    object-fit: cover;
    height: 450px !important;
    width: 100%;
  }
  .setFixed {
    height: 480px !important;
  }
  .container,
  container-fluid {
    background-image: url("/wood.jpg");
    min-width: 75vw;
    padding: 128px;
  }
  @media only screen and (max-width: 500px) {
    .container,
    .container-fluid {
      padding: 8px;
    }
  }
  .lakes-cafe-heading{
    display: inline-block;
    left: 10vw;
    position: relative;
    text-align: center;
    font-size: 4em;
    background-color: rgba(0,0,0,.5)
  }
  .thumbnail {
    border: 0 solid white;
    filter: none;
    transition: filter 0.4s;
    background-color: rgba(0,0,0,0);
  }
  .thumbnail:hover a img {
    transform: scale3d(1.1, 1.1, 1);
    filter: none;
    transition: filter 0.4s, transform 0.2s;
  }
  .thumbnail a img {
    transform: none;
    filter: brightness(.8);
    transition: filter 0.4s, transform 0.2s;
    max-height: 512px;
  }
  .c-desc {
    background-color: rgba(0,0,0,.5);
  }
  #lakesCarousel {
    box-shadow: 0 0 45px black;
  }
</style>
<div class='container'>
  <img id="logo" src="lakesCafeLogo.png" style="float: left;"></img>
  <br/>
  <h1 class="lakes-cafe-heading">Lakes Cafe</h1>
  <br/>
  <% if @images.count != 0 %>
    <div id="lakesCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% x = 0 %>
          <% @images.each do |image| %>
            <% if image.id == @images.first.id %>
              <li data-target="#lakesCarousel" data-slide-to="<%= x %>" class="active"></li>
            <% else %>
              <li data-target="#lakesCarousel" data-slide-to="<%= x %>"></li>
            <% end %>
            <% x = x + 1 %><% end %>
          </ol>
          <div class="carousel-inner" role="listbox">
            <% @images.each do |image| %>
              <% if image.id == @images.first.id %>
                <div class="carousel-item item active">
                <% else %>
                  <div class="carousel-item item">
                  <% end %>
                  <img class="d-block img-fluid carousel-image" src="<%= image.image_url %>" alt="<%= image.image_url %>">
                  <% if !image.description.empty? %>
                    <div class="carousel-caption d-none d-md-block c-desc">
                      <h3><%= image.description %></h3>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <a class="carousel-control left" href="#lakesCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#lakesCarousel" data-slide="next">&rsaquo;</a>
          </div>
        <% end %>


        <br><br>
        <div class="jumbotron" id="about">
          <p>Located in Perham Minnesota. It's a great place for groups of all sizes! We even have a room in the back that is perfect for private parties. Please call ahead to ensure availability.</p>

          <a style="color:black;" href="tel:+12183465920">
            <button type="button" class="btn btn-primary btn-lg">
              <span class="glyphicon glyphicon-earphone"></span>&nbsp; Call Us!
            </button>
          </a>
          <h3 id="hour-tag">Hours</h3>
          <div id="hours">
            <table>
              <tbody>
                <tr>
                  <td>Sunday</td>
                  <td class="time">8AM - 2PM</td>
                </tr>
                <tr>
                  <td>Monday</td>
                  <td class="time">5:30AM - 3PM</td>
                </tr>
                <tr>
                  <td>Tuesday</td>
                  <td class="time">5:30AM - 3PM</td>
                </tr>
                <tr>
                  <td>Wednesday</td>
                  <td class="time">5:30AM - 3PM</td>
                </tr>
                <tr>
                  <td>Thursday</td>
                  <td class="time">5:30AM - 3PM</td>
                </tr>
                <tr>
                  <td>Friday</td>
                  <td class="time">5:30AM - 3PM</td>
                </tr>
                <tr>
                  <td>Saturday</td>
                  <td class="time">5:30AM - 3PM</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <br><br>
        <h1 id="title" class="title">Menu</h1>
        <hr>
        <% @headings.each do |heading| %>
          <div>
            <h1 class="heading" id="<%=  heading.name %>"><%= heading.name %></h1>
            <% a=2 %>
              <% heading.sections.where(:visible => true).each do |section| %>
                <% a += 1 %>
                  <% if (a == 3) %>
                    <br>
                  </div>
                  <div class="row">
                    <% a = 0 %>
                      <div class="col-md-4">
                        <div class="thumbnail">
                          <% if section.imageURL.present? %>

                            <%=link_to( image_tag(section.imageURL), section_path(section), :class=>"setFixed img-rounded") %>
                          <% else %>
                            <%=link_to( image_tag("/egg.png"), section_path(section), :class=>"setFixed img-rounded") %>
                          <% end %>
                          <div class="item-name-on-picture caption">
                            <h3 style="text-align: center;"><%= section.name %></h3>
                          </div>
                        </div>
                      </div>
                    <% else %>
                      <div class="col-md-4">
                        <div class="thumbnail">
                          <% if section.imageURL.present? %>
                            <%=link_to( image_tag(section.imageURL), section_path(section), :class=>"setFixed img-rounded") %>
                          <% else %>
                            <%=link_to( image_tag("/egg.png"), section_path(section), :class=>"setFixed img-rounded") %>
                          <% end %>
                          <div class="item-name-on-picture caption">
                            <h3 style="text-align: center;"><%= section.name %></h3>
                          </div>
                        </div>
                      </div>
                    <%end%>
                  <%end%>
                </div>
              <%end%>
              <%= link_to("View as single page", onepage_url()) %>
